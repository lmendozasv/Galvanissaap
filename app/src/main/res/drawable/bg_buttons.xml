<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="false"
        >
        <shape>
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@android:color/transparent"
                android:angle="270" />
            <solid
                android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>

    </item>
    <item
        android:state_checked="true"
        >



        <shape>
            <gradient
                android:startColor="#FF401A"
                android:endColor="#FF401A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF401A" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>





    </item>
</selector>